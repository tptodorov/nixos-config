{
  "icon_theme": "Warm Charmed Icons",
  "agent": {
    "always_allow_tool_actions": true,
    "play_sound_when_agent_done": true
  },
  "edit_predictions": {
    "disabled_globs": [".env", "main.js"]
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "autosave": "on_focus_change",
  "buffer_line_height": "comfortable",
  "soft_wrap": "none",
  "vim_mode": true,
  "vim": {
    "leader": " ",
    "use_system_clipboard": "always"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true
  },
  "theme": {
    "mode": "dark",
    "dark": "Tokyo Night Storm",
    "light": "One Light"
  },
  "languages": {
    "Nix": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "nixfmt",
          "arguments": []
        }
      }
    },
    "TypeScript": {
      "inlay_hints": {
        "enabled": true
      }
    },
    "TSX": {
      "inlay_hints": {
        "enabled": true
      }
    },
    "Rust": {
      "inlay_hints": {
        "enabled": true
      },
      "format_on_save": "on"
    },
    "Go": {
      "inlay_hints": {
        "enabled": true
      },
      "format_on_save": "on",
      "language_servers": ["gopls"]
    },
    "Zig": {
      "inlay_hints": {
        "enabled": true
      },
      "format_on_save": "on",
      "language_servers": ["zls"]
    },
    "PHP": {
      "inlay_hints": {
        "enabled": true
      },
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["ruff"],
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "buffer_font_family": "ZedMono Nerd Font",
  "ui_font_family": ".SystemUIFont",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "scroll_beyond_last_line": "off",
  "terminal": {
    "font_family": "ZedMono Nerd Font",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  }
}
